<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_recommended_btn"
    android:elevation="10dp"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp"
    tools:ignore="HardcodedText"
    android:backgroundTint="#FAF0D2">

    <ImageView
        android:id="@+id/popularFoodImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/foodNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularFoodImage"
        android:textColor="#373B54"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:text="Textview"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodNameTV"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/prizeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#373B54"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/addBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:src="@drawable/plus_circle" />

    </RelativeLayout>

</RelativeLayout>