<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_recommended_btn"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/popularFoodImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/foodNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popularFoodImage"
            android:textColor="#373B54"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Textview"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/prizeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodNameTV"
            android:background="@drawable/price_background"
            android:text="$0.0"
            android:textSize="14sp"
            android:textColor="#9A3B3B"
            android:layout_marginHorizontal="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>