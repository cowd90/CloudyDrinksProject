<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@drawable/bg_login"
    tools:ignore="HardcodedText"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:id="@+id/login_title_layout">

        <TextView
            android:id="@+id/title_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-16dp"
            android:fontFamily="@font/greeting"
            android:text="Welcome back!"
            android:textSize="70sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to get your drink"
            android:layout_below="@id/title_login"
            android:textSize="32sp"
            android:fontFamily="@font/lucky"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/phoneNumberET"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableStart="@drawable/person_outline_32"
            android:drawablePadding="15dp"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:maxLength="50"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColorHint="#DCDCDC"
            android:backgroundTint="#DCDCDC"
            android:autofillHints="phone"
            android:textCursorDrawable="@drawable/text_cursor"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:hint="Mật khẩu"
                android:drawableStart="@drawable/lock_outline"
                android:drawablePadding="15dp"
                android:textColorHint="#DCDCDC"
                android:backgroundTint="#DCDCDC"
                android:autofillHints="password"
                android:textCursorDrawable="@drawable/text_cursor"/>

            <ImageView
                android:id="@+id/passwordIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:src="@drawable/show_pwd" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-60dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:textSize="16sp"
            android:textColor="@color/color"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:cornerRadius="6dp"
            android:layout_marginTop="35dp"
            android:text="ĐĂNG NHẬP"
            android:textSize="20sp"
            android:backgroundTint="#DCDCDC"
            android:textColor="#BCBCBC"
            android:clickable="false"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOẶC"
            android:textSize="16sp"
            android:textColor="#989898"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_outline"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google"
                android:layout_marginStart="20dp"
                android:importantForAccessibility="no"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập với Google"
                android:textSize="16sp"
                android:layout_marginStart="45dp"
                android:layout_gravity="center"
                android:textColor="#E6000000"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_outline"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_icon"
                android:layout_marginStart="20dp"
                android:importantForAccessibility="no"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập với Facebook"
                android:textSize="16sp"
                android:layout_marginStart="45dp"
                android:layout_gravity="center"
                android:textColor="#E6000000"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản?"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textColor="@color/color"
                android:textSize="16sp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>